#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Type check
echo "📝 Type checking..."
npm run type-check || exit 1

# Lint check
echo "🔧 Linting..."
npm run lint:check || exit 1

# Format check
echo "✨ Checking formatting..."
npm run format:check || exit 1

echo "✅ Pre-commit checks passed!"
